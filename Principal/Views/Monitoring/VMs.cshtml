                                <th>VM Name</th>
                                <th>IP</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("VMSettings", "Monitoring")">
                                            @Html.DisplayFor(modelItem => item.Hostname)
                                        </a>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.HostIP)</td>
                                    <td><span class="label label-success">Shipped</span></td>
                                </tr>
